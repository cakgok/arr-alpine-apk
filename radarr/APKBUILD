pkgname=radarr
pkgver=0.0.0    # <- auto-patched by workflow
pkgrel=0
pkgdesc="Movie collection manager (pre-built musl binary)"
url="https://radarr.video/"
architectures="x86_64 aarch64"
license="GPL-3.0-or-later"
depends="icu-libs ca-certificates tzdata"
options="!check"          # upstream binary, no tests

case "$CARCH" in
  x86_64) _arch="x64" ;;
  aarch64) _arch="arm64" ;;
  *) echo "Unsupported arch: $CARCH" && return 1 ;;
esac

source="radarr-$pkgver-musl.tar.gz::https://github.com/Radarr/Radarr/releases/download/v${pkgver}/Radarr.master.${pkgver}.linux-musl-core-${_arch}.tar.gz"
builddir="$srcdir"

build() { :; }

package() {
  install -d "$pkgdir/usr/lib/$pkgname"
  tar -xzf "$srcdir"/Radarr.master.$pkgver.linux-musl-core-$_arch.tar.gz \
      -C "$pkgdir/usr/lib/$pkgname" --strip-components=1

  install -Dm755 /dev/null "$pkgdir/usr/bin/$pkgname"
  cat > "$pkgdir/usr/bin/$pkgname" <<EOF
#!/usr/bin/env sh
exec /usr/lib/$pkgname/Radarr "\$@"
EOF
}

sha512sums="SKIP"
